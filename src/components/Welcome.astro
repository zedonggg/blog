---
import "../styles/global.css"
---

<div id="container" class="flex flex-col md:flex-row">
	<div class="mt-auto"><h1 class="text-left text-6xl h-auto" id="tweffect"></h1></div>
	<div class="md:ml-auto mt-auto">
		<ul class="flex flex-row homenav">
			<li class="font-bold text-indigo-500 text-2xl transition duration-300
			ease-in-out hover:text-indigo-200 hover:scale-110"><a href="/">about</a></li>
			<li class="pl-4 pr-4 font-bold text-indigo-500 text-2xl transition duration-300
			ease-in-out hover:text-indigo-200 hover:scale-110"><a href="/">projects</a></li>
			<li class="font-bold text-indigo-500 text-2xl transition duration-300
			ease-in-out hover:text-indigo-200 hover:scale-110"><a href="/">blog</a></li>
		</ul>
	</div>
</div>

<script>
	const wordsFinished = "Hi! I'm Sun";
	let i = 0;
	function typewriter() {
		if (i < wordsFinished.length) {
			document.getElementById("tweffect").innerHTML += wordsFinished[i];
			i++;
			setTimeout(typewriter, 100);
		}
		console.log("test");
	}
	window.addEventListener("load", () => {typewriter()});
</script>

